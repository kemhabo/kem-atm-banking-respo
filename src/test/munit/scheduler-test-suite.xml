		</munit:behavior>
		<munit:execution >
			<try doc:name="Try" doc:id="e359a1dd-4e10-42ff-810b-790dc0b6001d" >
				<flow-ref doc:name="Flow-ref to schedulerFlow" doc:id="5bb93679-026e-459b-880d-e0479ec0fe46" name="schedulerFlow" />
				<error-handler >
					<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="775cce21-d232-45de-afbc-8aca4bb90858" >
						<logger level="INFO" doc:name="Logger" doc:id="a3ba473f-96c7-4646-96e1-ff485a44b514" message="#[payload]"/>
					</on-error-continue>
				</error-handler>
			</try>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-that doc:name="Assert that" doc:id="4a27552f-3451-4617-a97e-a13820a43e2f" expression="#[error]" is='#[MunitTools::equalTo(error.description)]'/>
		</munit:validation>
	</munit:test>


