				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="0255e10b-937b-49e3-9a12-9f10b467644b" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[[&#10;  {&#10;    "atmPin": "1234",&#10;    "accountType": "savings",&#10;    "phoneNumber": "1252567890",&#10;    "ifscCode": "1234",&#10;    "wrongPin": 2,&#10;    "accountStatus": "Active",&#10;    "custAccNum": "1334567833",&#10;    "mailId": "kemhabo",&#10;    "pk": 0,&#10;    "bankName": "ICICI",&#10;    "transactionTimeStamp": "2022-01-28-03:9:14",&#10;    "totalBalance": 4800.000000000,&#10;    "custName": "kemal",&#10;    "branchName": "D.C Branch"&#10;  }]]' mediaType="application/java" encoding="UTF-8" />
