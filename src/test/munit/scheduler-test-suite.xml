			<munit-tools:mock-when doc:name="Mock when" doc:id="300ee6c9-d1c9-4ee6-a2b4-76d9e2fb6b70" processor="email:send">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="0255e10b-937b-49e3-9a12-9f10b467644b" attributeName="doc:id" />
					<munit-tools:with-attribute whereValue="Email_SMTP" attributeName="config-ref" />
				</munit-tools:with-attributes>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Event" doc:id="504e818e-649a-4305-b18e-0766ed98933f" >
				<munit:payload value='[&#10;  {&#10;    "totalBalance": 4800.000000000,&#10;    "mailId": "kemhabo@gmail.com"&#10;  },&#10;  {&#10;    "totalBalance": 5000.000000000,&#10;    "mailId": "kemhabo@gmail.com"&#10;  },&#10;  {&#10;    "totalBalance": 12233333.000000000,&#10;    "mailId": "kemhabo@gmail.com"&#10;  }&#10;]' />
			</munit:set-event>
			<flow-ref doc:name="Flow-ref to schedulerFlow" doc:id="7c44459f-d8f0-4f92-a727-3ea73299335a" name="schedulerFlow"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert equals" doc:id="d67d6d9a-1839-45e7-bbbd-5df40aab229c" actual='#[{&#10;  "totalBalance": 4800.000000000,&#10;  "mailId": "kemhabo@gmail.com"&#10;}]' expected='#[{&#10;  "totalBalance": 4800.000000000,&#10;  "mailId": "kemhabo@gmail.com"&#10;}]' message="responce payload not exist"/>
		</munit:validation>
	</munit:test>
